<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin_vertical"
        android:layout_marginTop="@dimen/text_margin_horizontal"
        android:layout_marginEnd="@dimen/text_margin_vertical"
        android:layout_marginBottom="@dimen/text_margin_horizontal"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin_vertical"
        android:layout_marginEnd="@dimen/text_margin_vertical"
        android:layout_marginBottom="@dimen/text_margin_horizontal"
        android:textAppearance="?attr/textAppearanceListItemSecondary"
        android:textColor="@android:color/darker_gray" />
</LinearLayout>
